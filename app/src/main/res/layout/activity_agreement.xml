<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_green"
    android:orientation="vertical"
    android:gravity="center"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".ui.Agreement">



    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:src="@drawable/agree" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's start!"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:text="Tap Accept to agree to the Terms of Service and Privacy Policy"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
android:layout_marginTop="35dp"
        android:layout_marginLeft="9dp">

        <CheckBox
            android:id="@+id/agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I accept the license agreement"
            android:textColor="@color/white"
            android:textSize="16dp"/>

    </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_above="@id/log_agree"
                android:background="@color/gray"/>

           <TextView
               android:id="@+id/log_agree"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="20dp"
               android:text="LOG IN"
               android:textColor="@color/white"
               android:layout_alignParentRight="true"
               android:layout_alignParentBottom="true"
               android:textSize="18dp"/>
                   </RelativeLayout>





</LinearLayout>