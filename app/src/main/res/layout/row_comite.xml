<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true"
    android:background="@drawable/profile_text_bg">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/text_background"

        android:padding="5dp">

        <!-- TextView Nama Mahasiwa -->
        <TextView
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="1dp"
            android:textColor="@color/colorBlack"/>

        <!-- TextView Npm Mahasiswa -->
        <TextView
            android:text="Workshop for Descrimination"
            android:id="@+id/Title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/text_background"

            android:textColor="@color/gray"/>

        <TextView
            android:text="Meeting Type"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:padding="1dp"
            android:textColor="@color/colorBlack"
            />

        <!-- TextView Npm Mahasiswa -->
        <TextView
            android:text="Departmental"
            android:id="@+id/meeting_type"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:textColor="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/text_background"
            android:layout_marginBottom="5dp"/> <TextView
        android:text="Agenda"
        android:id="@+id/priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorBlack"
        android:padding="1dp"/>

        <!-- TextView Npm Mahasiswa -->
        <TextView
            android:text="Workshop for Descrimination"
            android:id="@+id/agenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:textColor="@color/gray"
            android:background="@drawable/text_background"
            android:layout_marginBottom="5dp"/> <TextView
        android:text="Start Date"
        android:id="@+id/messageto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:padding="1dp"/>

        <!-- TextView Npm Mahasiswa -->
        <TextView
            android:text="06/11/2019 09:00:00"
            android:id="@+id/date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"

            android:textColor="@color/gray"

            android:layout_marginBottom="5dp"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>