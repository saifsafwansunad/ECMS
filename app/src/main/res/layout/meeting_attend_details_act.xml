<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true"
    app:ignore="NamespaceTypo"
    android:orientation="vertical"
    >
    <include
        layout="@layout/toolbar"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"


        android:background="@color/violete"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/attach"
                android:padding="2dp"/>
            <TextView
                android:id="@+id/title_toattend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:padding="2dp"
                android:layout_marginTop="2dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/agenda_toattend"
            android:textColor="@color/white"
            android:padding="2dp"
            android:textSize="14dp"
            android:layout_marginLeft="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="council agenda"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            >

            <TextView
                android:id="@+id/meeting_type_toattend"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginLeft="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="meeting type"
                />






        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:id="@+id/meet_detail_description"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginLeft="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Is MSTeam Meetings :"
                android:textStyle="bold"
                android:textColor="@color/white"

                />


            <TextView
                android:id="@+id/isMSteam__toattend_textview"
                android:textColor="@color/white"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="true"
                android:textStyle="bold"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/date_time_toattend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:text="22/12/2021 2:00 pm"
                    android:textColor="@color/white"
                    android:textSize="12dp"

                    />
            </RelativeLayout>






        </LinearLayout>










    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"



        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginLeft="28dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSTeam Meeting ID :"
                android:textColor="@color/violete"
                android:textSize="12dp"

                />


            <TextView
                android:id="@+id/meeting_id_textview"

                android:textSize="12dp"
                android:textColor="@color/violete"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="true"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginLeft="28dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSTeam Meeting Weblink :"
                android:textColor="@color/violete"
                android:textSize="12dp"

                />


            <TextView
                android:id="@+id/MSTeamMeetingJoinUrl_textview"
                android:textSize="12dp"
                android:textColor="@color/violete"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="true"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginLeft="28dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSTeam Meeting Join Url :"
                android:textColor="@color/violete"
                android:textSize="12dp"

                />


            <TextView
                android:id="@+id/MSTeamMeetingWebLink_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="true"
                android:textColor="@color/violete"

                android:textSize="12dp"

                />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#673BB7"
                android:text="Meeting Attachments :"
                android:textSize="20dp" />

        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/meeting_details_attachment_recyclerview"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
