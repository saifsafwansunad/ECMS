                     android:textSize="16dp"

                     android:id="@+id/forgot_password_textview"
                     android:textColor="@color/white"
                     android:padding="8dp"
                     android:layout_marginLeft="5dp"
                     android:inputType="textCapSentences"
                     android:layout_alignParentRight="true"
                     />



            </LinearLayout>


