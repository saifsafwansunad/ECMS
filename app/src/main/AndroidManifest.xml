                <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity android:name="com.ecms.ndmecms.IncomingCorrespondenceActionActivity" />
        <activity android:name="com.ecms.ndmecms.FusionTestTitleActivity" />
        <activity android:name="com.ecms.ndmecms.AssignedCorrespondenceTaskActivity" />
        <activity android:name="com.ecms.ndmecms.CommitteeMeetings" />
        <activity android:name="com.ecms.ndmecms.CommitteeManagement" />
        <activity android:name="com.ecms.ndmecms.ManageMeetingsActivity" />
        <activity android:name="com.ecms.ndmecms.ResolutionCorrespondenceActivity" />
