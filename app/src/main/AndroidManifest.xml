    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name="com.ecms.ndmecms.ui.App"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="n">
        <activity android:name="com.ecms.ndmecms.PrivacyPolicyActivity"></activity>
        <activity android:name="com.ecms.ndmecms.Activity.ReportActivity" />
        <activity android:name="com.ecms.ndmecms.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ecms.ndmecms.SplashScreenActivity" />
        <activity android:name="com.ecms.ndmecms.ui.ViewEmployeeActivity" />

        <receiver
            android:name="com.ecms.ndmecms.ui.Restarter"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="restartservice" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.ecms.ndmecms.ui.MyService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:stopWithTask="false" />

        <activity android:name="com.ecms.ndmecms.Notification" />
